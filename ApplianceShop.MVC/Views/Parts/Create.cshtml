@using ApplianceShop.Models.Parts
@model CreatePartViewModel

@{
    ViewData["Title"] = "Create a new Part";
}
<div class="container">
    <h1>Create a new Part</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name" class="control-label"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="PartNumber" class="form-control" placeholder="Part Number" />
                    <label asp-for="PartNumber" class="control-label"></label>
                    <span asp-validation-for="PartNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                    <label asp-for="Price" class="control-label"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StockQuantity" class="control-label"></label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary ms-2" />
                </div>
            </form>
        </div>
    </div>

    <div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
