@using ApplianceShop.Models.Parts
@model IEnumerable<PartViewModel>

@{
    ViewData["Title"] = "Parts";
}
<div class="container">
    <h1>Parts</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-hover dataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartNumber)
                </th>
                <th>
                    $ @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StockQuantity)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var part in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => part.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => part.PartNumber)
                    </td>
                    <td>
                        $ @Html.DisplayFor(modelItem => part.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => part.StockQuantity)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@part.Id" title="Edit"><i class="fa-solid fa-pen-to-square fast-tooltip"></i></a>
                        <a class="ms-2" asp-action="Details" asp-route-id="@part.Id" title="Details"><i class="fa-solid fa-circle-info text-info fast-tooltip"></i></a>
                        <a class="ms-2" asp-action="Delete" asp-route-id="@part.Id" title="Delete" data-bs-toggle="modal" data-bs-target="#delete_@part.Id">
                            <i class="fa-solid fa-trash-can text-danger fast-tooltip"></i>
                        </a>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="delete_@part.Id" tabindex="-1" aria-labelledby="#delete_@part.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Part</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h5>
                                            Are you certain you want to delete
                                            <span class="text-danger">
                                                <br />
                                                @part.Name
                                            </span> ?
                                        </h5>
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete">
                                            <input type="hidden" name="id" value="@part.Id" />
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger ms-2">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>