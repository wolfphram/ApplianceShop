@using ApplianceShop.Models.Appliances
@model CreateApplianceViewModel

@{
    ViewData["Title"] = "Create Appliance";
}

<div class="container">
    <h1>Create a new Appliance</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Brand" class="form-control" placeholder="Brand" />
                    <label asp-for="Brand" class="control-label"></label>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Model" class="form-control" placeholder="Model" />
                    <label asp-for="Model" class="control-label"></label>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                    <label asp-for="Price" class="control-label"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Features" class="form-control" placeholder="Features" />
                    <label asp-for="Features" class="control-label"></label>
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StockQuantity" class="control-label"></label>
                    <input asp-for="StockQuantity" class="form-control mt-2" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input type="file" class="form-control"
                     id="fileInput" name="fileInput"> <label for="fileInput">Choose a file</label>
                </div>
                <div class="form-group mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary ms-2" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
