@using ApplianceShop.Entities.Appliances
@using ApplianceShop.Models.Appliances
@model UpdateApplianceViewModel

@{
    ViewData["Title"] = "Edit Appliance";
}

<div class="container">
    <h1>
        Edit Appliance
        <span class="text-danger d-block d-md-inline mt-3">@Model.Brand @Model.Model</span>
    </h1>

    <hr />
    <div class="row">
        <div class="col-md-4 order-md-1">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-floating">
                    <input asp-for="Brand" class="form-control" placeholder="Brand" />
                    <label asp-for="Brand" class="control-label"></label>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Model" class="form-control" placeholder="Model" />
                    <label asp-for="Model" class="control-label"></label>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                    <label asp-for="Price" class="control-label"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Features" class="form-control" placeholder="Features" />
                    <label asp-for="Features" class="control-label"></label>
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="StockQuantity" class="form-control" placeholder="Stock Quantity" />
                    <label asp-for="StockQuantity" class="control-label"></label>
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary ms-2" />
                </div>
            </form>
        </div>
        <div class="text-center mt-5 mt-md-0 col-md-4 order-md-2">
            <img src="~/images/Appliances/@($"{Model.Brand} {Model.Model}.png")"
                 alt="@Model.Brand @Model.Model Image"
                 class="img-fluid rounded"
                 style="max-width: 415px; max-height: 415px; object-fit: contain;" />
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
