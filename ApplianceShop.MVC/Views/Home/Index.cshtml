                                    <i class="fas fa-envelope" style="font-size: 30px; color: blue;"></i>
                                </a>
                                <a href="tel:@customer.Phone" class="card-link" data-bs-toggle="tooltip" data-bs-placement="top" title="@customer.Phone">
                                    <i class="fas fa-phone" style="font-size: 30px; color: green;"></i>
                                </a>
                            </div>
