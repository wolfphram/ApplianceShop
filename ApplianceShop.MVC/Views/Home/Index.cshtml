@using ApplianceShop.Models.Homes
@model HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6 order-md-1 order-2">
            <h1 class="display-5">Welcome to Appliance Shop</h1>
            <p class="lead">
                Find the best appliances and parts to make your home complete. Explore our wide range of high-quality products.
            </p>
            <a class="btn btn-primary btn-lg" href="/Orders/Create">Place an Order</a>
        </div>
        <div class="col-md-6 text-center order-md-2 order-1">
            <img src="~/images/Appliances-Shop-2-logo-removebg.png" alt="Appliances Shop Logo" class="img-fluid rounded">
        </div>
    </div>

    <hr class="mb-3 mb-sm-5" style="margin-bottom: 3rem !important;">

    <div class="text-center mb-5">
        <h4>Our Most Popular Appliances</h4>
    </div>

    <div id="applianceCarousel" class="carousel slide bg-section" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.GetAppliances.Count; i++)
            {
                <button type="button" data-bs-target="#applianceCarousel" data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @(i + 1)">
                </button>
            }
        </div>

        <div class="carousel-inner">
            @foreach (var appliance in Model.GetAppliances.Select((item, index) => new { item, index }))
            {
                <div class="carousel-item @(appliance.index == 0 ? "active" : "")">
                    <img src="~/images/Appliances/@($"{appliance.item.Brand} {appliance.item.Model}.png")"
                         class="d-block w-100"
                         alt="@appliance.item.Brand, @appliance.item.Model"
                         style="max-height: 400px; object-fit: contain;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@appliance.item.Brand @appliance.item.Model</h5>
                        <p><strong>Price: $@appliance.item.Price</strong> </p>
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#applianceCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="text-black">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#applianceCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="text-black">Next</span>
        </button>
    </div>


    <hr class="my-5">

    <div class="text-center mb-5">
        <h4>Frequently Bought Parts</h4>
    </div>

    <div id="partCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.GetParts.Count; i++)
            {
                <button type="button" data-bs-target="#partCarousel" data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @(i + 1)">
                </button>
            }
        </div>

        <div class="carousel-inner">
            @foreach (var part in Model.GetParts.Select((item, index) => new { item, index }))
            {
                <div class="carousel-item @(part.index == 0 ? "active" : "")">
                    <img src="~/images/Parts/@($"{part.item.Name} {part.item.PartNumber}.png")"
                         class="d-block w-100"
                         alt="@part.item.Name, @part.item.PartNumber"
                         style="max-height: 200px; object-fit: contain;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@part.item.Name @part.item.PartNumber</h5>
                        <p><strong>Price: $@part.item.Price</strong></p>
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#partCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="text-black">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#partCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="text-black">Next</span>
        </button>
    </div>

    <hr class="my-5">

</div>

<div id="ourService" class="bg-section mt-3">

