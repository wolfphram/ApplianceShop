<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Appliances Shop</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.3/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.14.0/themes/base/jquery-ui.min.css" integrity="sha512-F8mgNaoH6SSws+tuDTveIu+hx6JkVcuLqTQ/S/KJaHJjGc8eUxIrBawMnasq2FDlfo7FYsD8buQXVwD+0upbcA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApplianceShop.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom shadow-sm mb-3 navbar-custom-classes">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Appliances-Shop-2-logo-removebg-preview.png" title="Appliances Shop" alt="Appliances Shop Logo" height="40" class="fast-tooltip bg-light" />
                    <span class="d-sm-none ms-3 text-white text-center">Appliances Shop</span>
                </a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <hr class="d-sm-none text-white" />
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Appliances" asp-action="Index">Appliances</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Parts" asp-action="Index">Parts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto me-3 mt-3 mt-sm-0">
                        <li class="nav-item">
                            <form class="d-flex fast-tooltip" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-info" type="submit" title="Search">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </form>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item flex-grow-1 mt-3 mt-sm-0">
                            <a class="nav-link text-light fast-tooltip d-flex align-items-center" asp-area="" asp-controller="" asp-action="" title="Cart">
                                <i class="fa-solid fa-cart-shopping" style="font-size: 2rem;"></i>
                                <span class="d-sm-none ms-3">Cart</span>
                                </a>
                        </li>
                        <li class="nav-item d-none d-lg-flex align-items-center">
                            <div class="vr h-100 mx-lg-2 text-info"></div>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="border-top text-muted">

            <div class="container py-5">

                <div class="row g-4">

                    <div class="col-lg-6 col-xl-3">

                        <div class="text-body-secondary">
                            <h3 class="text-dark">
                            <img src="/images/Appliances-Shop-2-logo-removebg-preview.png" alt="Logo" style="height:30px;" />
                                Appliances Shop
                                </h3>
                            <div>Street</div>
                            <div>Town</div>
                            <div>Country</div>

                            <div class="mt-4">
                                <label for="phone" class="fw-bold">Phone:</label>
                                <a id="phone" class="text-decoration-none text-info a-hover"
                                   href="tel:+123456789">+123456789</a>
                            </div>
                            <div>
                                <label for="email" class="fw-bold">Email:</label>
                                <a id="email" class="text-decoration-none text-info a-hover"
                                   href="mailto:info@example.com">info@example.com</a>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-6 col-xl-3">

                        <h6 class="fw-bold mb-3">Company</h6>

                        <ul class="nav flex-column">
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Our Brand
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Career
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Press & Media
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Term of Service
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Privacy Policy
                                </a>
                            </li>
                        </ul>

                    </div>

                    <div class="col-lg-6 col-xl-3">

                        <h6 class="fw-bold mb-3">Support</h6>

                        <ul class="nav flex-column">
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Delivery
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Return Policy
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Product Registration
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Term of Service
                                </a>
                            </li>
                        <li class="nav-item mb-2 footer-links">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-info me-1"></i>
                                    Privacy Policy
                                </a>
                            </li>
                        </ul>

                    </div>

                    <div class="col-lg-6 col-xl-3">

                        <h6 class="fw-bold mb-3">Follow us on Social Media</h6>

                        <div class="social-links d-flex gap-2 fast-tooltip">

                            <a href="https://www.x.com" target="_blank" class="social-link text-light rounded-circle" title="Twitter">
                                <i class="fa-brands fa-x-twitter"></i>
                            </a>

                            <a href="https://www.facebook.com" target="_blank"
                               class="social-link text-light rounded-circle" title="Facebook">
                                <i class="fa-brands fa-facebook"></i>
                            </a>

                            <a href="https://www.instagram.com" target="_blank"
                               class="social-link text-light rounded-circle" title="Instagram">
                                <i class="fa-brands fa-instagram"></i>
                            </a>

                            <a href="https://www.whatsapp.com" target="_blank"
                               class="social-link text-light rounded-circle" title="WhatsApp">
                                <i class="fa-brands fa-whatsapp"></i>
                            </a>

                            <a href="https://www.linkedin.com" target="_blank"
                               class="social-link text-light rounded-circle" title="LinkedIn">
                                <i class="fa-brands fa-linkedin"></i>
                            </a>



                        </div>

                    </div>

                </div>

            </div>

        <div class="copy-right bg-section">

            <div class="container">

                <div class="d-flex justify-content-between fs-7 py-3">

                    <div>
                        &copy; Copyright <span class="fw-bold">Appliances Shop.</span> All Rights Reserved.
                    </div>

                    <div>
                        Designed By <a href="#" class="">Someone</a>
                    </div>

                </div>

            </div>

        </div>
    </footer>

    <div class="back-to-top">
        <a href="#" title="Back to Top">
            <i class="fa-solid fa-arrow-up"></i>
        </a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.min.js" integrity="sha256-Fb0zP4jE3JHqu+IBB9YktLcSjI1Zc6J2b6gTjB0LpoM=" crossorigin="anonymous"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
